<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="356dp"
                android:layout_height="138dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="19dp"
                android:background="#ececec"
                android:scaleType="center" />

            <TextView
                android:id="@+id/txtNomPharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_back"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Nome pharmacie"
                android:textColor="#262626"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtTelPharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNomPharma"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Tel Pharmacie"
                android:textColor="#262626"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txtSitePharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTelPharma"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Site"
                android:textColor="#262626"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtAdressPharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtSitePharma"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="Adresse"
                android:textColor="#262626"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtAdressPharma"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="date"
                android:textColor="#262626"
                android:textSize="14dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>